<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>天天淘</title>
    <link rel="stylesheet" type="text/css" href="/public/common/reset.css">
    <link rel="stylesheet" type="text/css" href="/public/user/css/style.css">
</head>
<body>
<!-- 头部 -->
<% include header %>

<div class="content">
    <main class="main">
        <section class="content-section section--goodsShow">
            <div class="section-header clearfix">
                <h2 class="header-ti">商品分类</h2>
            </div>
            <div class="section-wrapper clearfix" id="categories">
                <ul class="goods-type-list">
                    <%if (category.status === 'success' && category.data.length > 0){%>
                        <%for (let item of category.data) {%>
                        <li class="list-item"><a href="/list?type_<%=item.idCategory%>" class="list-link"><%=item.name%></a></li>
                        <%}%>
                    <%}else{%>
                    <%}%>
                </ul>
            </div>
        </section>
        <section class="content-section section--commendedGoods">
            <div class="section-header clearfix">
                <h2 class="header-ti">推荐商品</h2><a href="/src/product-feature.html" class="more">查看更多</a>
            </div>
            <div class="section-wrapper clearfix" id="commendGoods">
                <%if (recommandGoods.status === 'success' && recommandGoods.data.length > 0) {%>
                    <%for (let item of recommandGoods.data) {%>
                <div class="section-item">
                    <div class="item-img-wrapper">
                        <img class="item-img" src="<%=item.bigImg%>">
                    </div>
                    <div class="item-detail-wrapper">
                        <a href="/detail?<%=item.idGoods%>" class="item-link"><h3 class="item-ti"><%=item.name%></h3></a>
                        <p class="item-price"><span class="price-sign">￥</span><strong class="price"><%=item.price%></strong></p>
                    </div>
                </div>
                <%}%>
                <%} else {%>
                    <div>暂无数据</div>
                <%}%>
            </div>
        </section>
        <section class="content-section section--discountGoods">
            <div class="section-header clearfix">
                <h2 class="header-ti">特价商品</h2><a href="/src/specials.html" class="more">查看更多</a>
            </div>
            <div class="section-wrapper clearfix" id="discountGoods">
                <%if (discountedGoods.status === 'success' && discountedGoods.data.length > 0) {%>
                <%for (let item of discountedGoods.data) {%>
                <div class="section-item">
                    <div class="item-img-wrapper">
                        <img class="item-img" src="<%=item.bigImg%>">
                    </div>
                    <div class="item-detail-wrapper">
                        <a href="/detail?<%=item.idGoods%>" class="item-link"><h3 class="item-ti"><%=item.name%></h3></a>
                        <p class="item-price"><span class="price-sign">￥</span><strong class="price"><%=item.price%></strong></p>
                    </div>
                </div>
                <%}%>
                <%} else {%>
                <div>暂无数据</div>
                <%}%>
            </div>
        </section>
    </main>
</div>
<script src="/public/user/js/public.js"></script>
<script src="/public/user/js/index.js"></script>
</body>
</html>